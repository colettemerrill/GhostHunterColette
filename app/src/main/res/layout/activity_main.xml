<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/level_background">

    <TextView android:text="@string/levels" android:layout_width="fill_parent"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_marginTop="30dp"
        android:textColor="#B40431"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Easy"
        android:id="@+id/button_easy"
        android:textSize="20dp"
        android:textColor="#B40431"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button_medium"
        android:layout_alignStart="@+id/button_medium"
        android:layout_marginTop="73dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:id="@+id/button_medium"
        android:layout_marginTop="77dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#B40431"
        android:layout_below="@+id/button_easy"
        android:layout_alignLeft="@+id/button_hard"
        android:layout_alignStart="@+id/button_hard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard"
         android:textSize="20dp"
        android:gravity="center"
        android:textColor="#B40431"
        android:id="@+id/button_hard"
        android:layout_below="@+id/button_medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

</RelativeLayout>
